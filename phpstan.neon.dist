includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 6

    paths:
        - app
        - database
        - routes

    # Reduce “always true/false” noise from phpdoc-only types
    treatPhpDocTypesAsCertain: false

    # Replacement for the removed checkPhpDocMissingReturnType
    checkPhpDocMissingReturn: true

    # Don't fail CI when an ignored pattern isn't matched
    reportUnmatchedIgnoredErrors: false

    ignoreErrors:
        - '#Call to an undefined method Illuminate\\Support\\Collection::where#'