{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "laravel/laravel",
  "type": "project",
  "description": "The skeleton application for the Laravel framework.",
  "keywords": ["laravel", "framework"],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "consoletvs/charts": "^6.8",
    "erusev/parsedown": "^1.7",
    "intervention/image": "^3.11",
    "laravel/framework": "^12.0",
    "laravel/tinker": "^2.10.1",
    "league/commonmark": "2.7",
    "spatie/image": "^3.8",
    "spatie/image-optimizer": "^1.8",
    "spatie/laravel-csp": "^3.17",
    "spatie/laravel-sitemap": "^7.3",
    "stripe/stripe-php": "^17.1",
    "symfony/http-client": "^7.2",
    "symfony/mailgun-mailer": "^7.2"
  },
  "require-dev": {
    "doctrine/dbal": "^4.3",
    "fakerphp/faker": "^1.23",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "1",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "phpunit/phpunit": "^11.5.3",
    "phpstan/phpstan": "^2.1.8",
    "phpstan/phpstan-deprecation-rules": "^2.0",
    "larastan/larastan": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],

    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
    ],
    "test": [
      "@php artisan config:clear --ansi",
      "@php artisan test"
    ],

    "lint": "pint",
    "lint:test": "pint --test",
    
    "stan": "php -d memory_limit=1G vendor/bin/phpstan analyse --no-progress --memory-limit=1G",
    "stan:ci": "php -d memory_limit=1G vendor/bin/phpstan analyse --no-progress --error-format=github --memory-limit=1G",
    "stan:baseline": "php -d memory_limit=1G vendor/bin/phpstan analyse --generate-baseline --memory-limit=1G",
    "stan:fix": "php -d memory_limit=1G vendor/bin/phpstan analyse --fix --no-progress --memory-limit=1G"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}